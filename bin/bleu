#!/usr/bin/env bash

if [[ -z $3 ]]; then
  echo "Usage: bleu output reference #numrefs"
  exit 1
fi

format=plain
grep "|||" $1 > /dev/null
if [[ $? -eq 0 ]]; then
  format=nbest
fi

verbose=0
[[ ! -z $4 ]] && verbose=1

java -cp $JOSHUA/class -Dfile.encoding=utf8 -Djava.library.path=lib -Xmx256m -Xms256m -Djava.util.logging.config.file=logging.properties joshua.util.JoshuaEval -cand $1 -format $format -ref $2 -rps $3 -m BLEU 4 closest -v $verbose
